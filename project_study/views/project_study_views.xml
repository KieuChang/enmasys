<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="project_view_tree" model="ir.ui.view">
            <field name="name">project.tree</field>
            <field name="model">project.study</field>
            <field name="arch" type="xml">
                <tree string="Project Study Action">
                    <field name="name"/>
                    <field name="dateline"/>
                    <field name="project_managers"/>
                    <field name="task_attendees" widget="Many2many_tags"/>
                    <field name="status"/>

                </tree>
            </field>
        </record>
        <record id="project_view_form" model="ir.ui.view">
            <field name="name">project.form</field>
            <field name="model">project.study</field>
            <field name="arch" type="xml">
                <form string="Project">
                    <sheet>
                          <h1>
                            <field name="name" placeholder="NAME"/>
                          </h1>
                        <group>
                            <group>
                                <field name="status"/>
                                <field name="assign_to"/>
                            </group>
                            <group>
                                <field name="dateline"/>
                                <field name="note"/>
                            </group>
                        </group>
                        <group>
                            <field name="project_managers" />
                        </group>
                        <group>
                            <field name="task_attendees" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name ="description" widget="html" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="project_action" model="ir.actions.act_window">
            <field name="name">Project</field>
            <field name="res_model">project.study</field>
            <field name="view_mode">tree,form</field>
<!--            <field name="view_id" ref="customer_view_tree"/>-->
        </record>
    </data>
    <menuitem id="project_menu" name="Project study" groups="base.group_user"/>
    <menuitem id="project_menu_1" name="Study" parent="project_menu"
              action="project_action"
              groups="base.group_user"/>
</odoo>